{
  "cli": {
    "version": ">= 16.1.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": { "simulator": true }
    },
    "preview": {
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "autoIncrement": true
    },
    "androidapk": {
      "android": {
        "buildType": "apk"
      },
      "distribution": "internal",
      "environment": "production"
    }
  },
  "submit": {
    "production": {}
  }
}
